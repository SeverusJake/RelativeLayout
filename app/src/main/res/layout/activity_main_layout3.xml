<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvred"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="#F44336"
        android:padding="10dp"
        android:text="Red"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvgreen"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvred"
        android:layout_toRightOf="@id/tvred"
        android:background="#4CAF50"
        android:padding="10dp"
        android:text="Green"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvblue"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvgreen"
        android:layout_toRightOf="@id/tvgreen"
        android:background="#2196F3"
        android:padding="10dp"
        android:text="Blue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvorange"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvblue"
        android:layout_toRightOf="@id/tvblue"
        android:background="#FF5722"
        android:padding="10dp"
        android:text="Orange"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvpink"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvorange"
        android:layout_toLeftOf="@id/tvorange"
        android:background="#E139FD"
        android:padding="10dp"
        android:text="Pink"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvyellow"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvpink"
        android:layout_toLeftOf="@id/tvpink"
        android:background="#FFEB3B"
        android:padding="10dp"
        android:text="Yellow"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvpurple"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvyellow"
        android:layout_toLeftOf="@id/tvyellow"
        android:background="#8F51FF"
        android:padding="10dp"
        android:text="Purple"
        android:textSize="20sp" />
</RelativeLayout>