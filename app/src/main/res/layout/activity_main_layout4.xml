<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F44336"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:text="Top Content Here"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvgreen"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tvblue"
        android:layout_margin="20dp"
        android:background="#4CAF50"
        android:padding="10dp"
        android:text="Green"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvblue"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#2196F3"
        android:padding="10dp"
        android:text="Blue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvorange"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tvblue"
        android:background="#FF5722"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="Orange"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvyellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="#FFEB3B"
        android:padding="10dp"
        android:text="Bottom Content Here"
        android:textSize="20sp" />


</RelativeLayout>